{
  "name": "Flutter Dev Container (Windows)",
  
  // Point this to your new Windows-specific compose file
  "dockerComposeFile": "../docker-compose-windows.yml",

  "service": "flutter-dev",
  "workspaceFolder": "/home/flutteruser/app",
  "remoteUser": "flutteruser",
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code"
      ]
    }
  },

  // This command runs after the container is created. It ensures the Flutter
  // tool knows to use the host.docker.internal address for debugging.
  "postCreateCommand": "flutter config --enable-windows-desktop"
}